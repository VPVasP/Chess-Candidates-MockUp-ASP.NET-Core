@model List<ShopMockUp.Models.Player>
@{
    ViewData["Title"] = "MenuIndex";
}
<title>@ViewData["Title"]</title>
<style>
    body {
        background-color: black;
    }

    h4 {
        color: white;
    }

    h4, .btn-info {
        color: black;
        background-color: gold;
    }

</style>

<div class="container">
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-6">
                <div class="d-flex justify-content-center">
                    <h3>@item.Name</h3>
                </div>
                <div class="d-flex justify-content-center">
                    <img src="@item.ImageUrl" style="width: 70%" />
                </div>
                <div class="d-flex justify-content-center">
                  
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id" style="color: black;">Player Info</a>
                </div>
            </div>
        }
    </div>
</div>